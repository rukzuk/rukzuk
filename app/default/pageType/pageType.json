{
    "name": {
        "de": "Normale Seite",
        "en": "Regular Page"
    },
    "description": {
        "de": "Standard f체r normale Seiten.",
        "en": "Default for regular pages."
    },
    "version": "dev",
    "form": [
        {
            "type": "TextField",
            "CMSvar": "_name",
            "fieldLabel": "{\"de\": \"Seitentitel\", \"en\": \"Page Title\"}",
            "emptyText": "",
            "minLength": 1,
            "maxLength": 255,
            "allowBlank": true
        },
        {
            "type": "OnOffFieldSet",
            "CMSvar": "_inNavigation",
            "fieldLabel": "{\"de\": \"In Navigation anzeigen\", \"en\": \"Show in Navigation\"}",
            "_items": [
                {
                    "type": "TextField",
                    "CMSvar": "_navigationTitle",
                    "fieldLabel": "{\"de\": \"Eigene Bezeichnung in Navigation (Standard: Seitentitel)\", \"en\": \"Name in Navigation (default: Page Title)\"}",
                    "emptyText": "",
                    "minLength": 0,
                    "maxLength": 255,
                    "allowBlank": true
                }
            ]
        },
        {
            "type": "TextArea",
            "CMSvar": "_description",
            "fieldLabel": "{\"de\": \"Beschreibung f체r Teaser und Suchmaschinen\", \"en\": \"Description for Teaser and Search Engines\"}",
            "height": 100
        },
        {
            "type": "DateField",
            "CMSvar": "_date",
            "width": 200,
            "fieldLabel": "{\"de\": \"Datum\", \"en\": \"Date\"}"
        },
        {
            "type": "ImagePicker",
            "CMSvar": "_mediaId",
            "filterType":"image",
            "showText": true,
            "fieldLabel": "{\"de\": \"Bild\", \"en\": \"Image\"}",
            "text": "{\"de\": \"Bild w채hlen\", \"en\": \"Select image\"}",
            "multiSelect": false
        },

        {
            "type": "TextField",
            "CMSvar": "customTextfield1",
            "fieldLabel": "customTextfield1",
            "emptyText": "",
            "minLength": 1,
            "maxLength": 255,
            "allowBlank": true,
            "remove": true
        },
        {
            "type": "TextField",
            "CMSvar": "customTextfield2",
            "fieldLabel": "customTextfield2",
            "emptyText": "",
            "minLength": 1,
            "maxLength": 255,
            "allowBlank": true,
            "remove": true
        },
        {
            "type": "TextArea",
            "CMSvar": "customTextfield3",
            "fieldLabel": "customTextfield3",
            "height": 100,
            "remove": true
        },
        {
            "type": "ComboSelect",
            "CMSvar": "customTextfield4",
            "fieldLabel": "customTextfield4",
            "emptyText": "",
            "allowBlank": true,
            "remove": true
        },
        {
            "type": "HtmlRichText",
            "CMSvar": "customTextfield5",
            "fieldLabel": "customTextfield5",
            "showText": true,
            "allowBlank": true,
            "remove": true,
            "richTextEditorConfig": {
                "bold": true,
                "strikethrough": true,
                "italic": true,
                "subscript": true,
                "underline": true,
                "superscript": true,
                "bullist": true,
                "link": true,
                "numlist": true,
                "enterKey": "linebreak"
            }
        },
        {
            "type": "OnOffFieldSet",
            "CMSvar": "enableRedirect",
            "fieldLabel": "{\"de\": \"Weiterleitung aktivieren\", \"en\": \"Enable redirect\"}",
            "_items": [
                {
                    "type": "TabbedFieldSet",
                    "CMSvar": "redirectType",
                    "_items": [{
                        "type": "TabPage",
                        "title": "{\"de\": \"erste Unterseite \", \"en\": \"first child page\"}",
                        "tabValue": "firstChild",
                        "_items": [{
                            "type": "Comment",
                            "text": "{\"de\": \"Es wird auf die erste Seite unterhalb dieser Seite weitergeleitet (sofern vorhanden)\", \"en\": \"Redirect to fist child page of thhis page (if exists)\"}"
                        }]
                    },{
                        "type": "TabPage",
                        "title": "{\"de\": \"interne Seite\", \"en\": \"internal page\"}",
                        "tabValue": "page",
                        "_items": [{
                            "type": "InternalLinkChooser",
                            "CMSvar": "redirectPageId",
                            "fieldLabel": "{\"de\": \"Interne Seite ausw채hlen, auf die weitergeleitet werden soll\", \"en\": \"choose internal page\"}"
                        }]
                    },{
                        "type": "TabPage",
                        "title": "{\"de\": \"externe URL\", \"en\": \"external URL\"}",
                        "tabValue": "url",
                        "_items": [{
                            "type": "TextField",
                            "CMSvar": "redirectUrl",
                            "fieldLabel": "{\"de\": \"URL eingeben (bitte http:// bzw. https:// davor eingeben)\", \"en\": \"Site URL (with http:// or https://\"}",
                            "emptyText": "http://",
                            "minLength": 1,
                            "maxLength": 255,
                            "allowBlank": false
                        }]
                    }]
                }
            ]

        },
        {
            "type": "OnOffToggle",
            "CMSvar": "notInPageList",
            "fieldLabel": "{\"de\": \"Diese Seite nicht in Seitenlisten anzeigen\", \"en\": \"Hide this page on page lists\"}"
        },
        {
            "type": "OnOffToggle",
            "CMSvar": "notInSitemapXml",
            "fieldLabel": "{\"de\": \"Diese Seite nicht in sitemap.xml aufnehmen\", \"en\": \"Exclude this page in sitemap.xml\"}"
        }
    ],
    "formValues": {
        "_name": "",
        "_inNavigation": true,
        "_navigationTitle": "",
        "_date": null,
        "_description": "",
        "_mediaId": null,
        "enableRedirect": false,
        "redirectType": "firstChild",
        "notInPageList": false,
        "notInSitemapXml": false
    }
}